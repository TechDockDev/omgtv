# Node.js / TypeScript
NODE_ENV=development

# HTTP Server
HTTP_HOST=0.0.0.0
HTTP_PORT=4500
HTTP_BODY_LIMIT=1048576

# gRPC Server
GRPC_BIND_ADDRESS=0.0.0.0:50052

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pocketlol_users?schema=public

# Logging
LOG_LEVEL=info

# Service Authentication (optional - for securing gRPC endpoints)
# Must match AuthService USER_SERVICE_TOKEN when RBAC integration is enabled
SERVICE_AUTH_TOKEN=your-service-auth-token-here

# AuthService Integration
# Required for enforcing admin role ownership before assigning RBAC roles
AUTH_SERVICE_ADDRESS=0.0.0.0:50051
AUTH_SERVICE_TOKEN=your-auth-service-token-here
