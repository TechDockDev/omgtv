# HTTP server configuration
HTTP_HOST=0.0.0.0
HTTP_PORT=4700
HTTP_BODY_LIMIT=1048576

# gRPC server configuration (entitlement checks)
GRPC_BIND_ADDRESS=0.0.0.0:50071

# Logging
LOG_LEVEL=info

# PostgreSQL connection string for Prisma
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pocketlol_subscription?schema=public

# Redis for idempotency keys, caches, rate limits
REDIS_URL=redis://localhost:6379/0

# Internal service auth token for S2S calls
SERVICE_AUTH_TOKEN=change-me

# Razorpay credentials
RAZORPAY_KEY_ID=rzp_test_change_me
RAZORPAY_KEY_SECRET=change-me

# OpenTelemetry (optional)
OTEL_SERVICE_NAME=subscription-service
OTEL_TRACES_ENDPOINT=
OTEL_METRICS_ENDPOINT=
OTEL_METRICS_EXPORT_INTERVAL_MS=60000
