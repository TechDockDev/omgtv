# Container images
POSTGRES_IMAGE_TAG=16-alpine
REDIS_IMAGE_TAG=7-alpine

# Persistent storage & port bindings
POSTGRES_VOLUME_NAME=postgres-data
POSTGRES_HOST_PORT=5432
REDIS_HOST_PORT=6380
USER_SERVICE_HTTP_HOST_PORT=4500
USER_SERVICE_GRPC_HOST_PORT=50052
AUTH_SERVICE_HTTP_HOST_PORT=4000
AUTH_SERVICE_GRPC_HOST_PORT=50051
CONTENT_SERVICE_HTTP_HOST_PORT=4600
ENGAGEMENT_SERVICE_HTTP_HOST_PORT=4700
SEARCH_SERVICE_HTTP_HOST_PORT=4800
STREAMING_SERVICE_HTTP_HOST_PORT=4900
UPLOAD_SERVICE_HTTP_HOST_PORT=5000
GATEWAY_HTTP_HOST_PORT=3000

# Database credentials & logical databases
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
USER_SERVICE_DB=pocketlol_users
AUTH_SERVICE_DB=pocketlol_auth
CONTENT_SERVICE_DB=pocketlol_content

# Authentication tokens shared across services
SERVICE_AUTH_TOKEN=change-me

# AuthService JWT configuration (replace with your real keys)
AUTH_JWT_KEY_ID=auth-service-key
AUTH_ACCESS_TOKEN_TTL=900
AUTH_REFRESH_TOKEN_TTL=604800
AUTH_REFRESH_TOKEN_ROTATION=true
AUTH_JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
REPLACE_WITH_PRIVATE_KEY_CONTENT
-----END PRIVATE KEY-----"
AUTH_JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
REPLACE_WITH_PUBLIC_KEY_CONTENT
-----END PUBLIC KEY-----"

# Optional overrides
USER_SERVICE_NODE_ENV=production
USER_SERVICE_LOG_LEVEL=info
AUTH_SERVICE_NODE_ENV=production
AUTH_SERVICE_LOG_LEVEL=info
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_B64=base64-encoded-service-account-json
CONTENT_SERVICE_NODE_ENV=production
CONTENT_SERVICE_HTTP_PORT=4600
CONTENT_SERVICE_LOG_LEVEL=info
CONTENT_SERVICE_CDN_BASE_URL=https://cdn.local.pocketlol
CONTENT_SERVICE_DEFAULT_OWNER_ID=00000000-0000-0000-0000-000000000001
ENGAGEMENT_SERVICE_NODE_ENV=production
ENGAGEMENT_SERVICE_HTTP_PORT=4700
ENGAGEMENT_SERVICE_LOG_LEVEL=info
SEARCH_SERVICE_NODE_ENV=production
SEARCH_SERVICE_HTTP_PORT=4800
SEARCH_SERVICE_LOG_LEVEL=info
SEARCH_SERVICE_DEFAULT_PAGE_SIZE=20
STREAMING_SERVICE_NODE_ENV=production
STREAMING_SERVICE_HTTP_PORT=4900
STREAMING_SERVICE_LOG_LEVEL=info
STREAMING_SERVICE_CDN_BASE_URL=https://stream.cdn.pocketlol
STREAMING_SERVICE_SIGNED_URL_TTL_SECONDS=300
UPLOAD_SERVICE_NODE_ENV=production
UPLOAD_SERVICE_HTTP_PORT=5000
UPLOAD_SERVICE_LOG_LEVEL=info
UPLOAD_SERVICE_BUCKET=pocketlol-uploads
UPLOAD_SERVICE_CDN_BASE_URL=https://upload.cdn.pocketlol
UPLOAD_SERVICE_SIGNED_UPLOAD_TTL_SECONDS=600
GATEWAY_NODE_ENV=production
GATEWAY_LOG_LEVEL=info
GATEWAY_REQUEST_LOGGING=true
GATEWAY_TRUST_PROXY=true
GATEWAY_CONTENT_CACHE_TTL=120
GATEWAY_RATE_LIMIT_ANON=20
GATEWAY_RATE_LIMIT_AUTH=100
GATEWAY_RATE_LIMIT_ADMIN=500
GATEWAY_AUTH_AUDIENCE=pocketlol-services
GATEWAY_AUTH_ISSUER=auth-service
GATEWAY_ENABLE_TELEMETRY=false
GATEWAY_SERVICE_NAME=pocketlol-gateway
