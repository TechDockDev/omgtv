NODE_ENV=development
HTTP_HOST=0.0.0.0
HTTP_PORT=5000
HTTP_BODY_LIMIT=26214400
LOG_LEVEL=info

# Shared platform token injected by API Gateway (Secret Manager: platform/service-token)
SERVICE_AUTH_TOKEN=

# Data stores
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pocketlol_uploads?schema=public
REDIS_URL=redis://localhost:6379/1

# Upload throttling
UPLOAD_CONCURRENT_LIMIT=5
UPLOAD_DAILY_LIMIT=50

# GCP + signing
GCP_PROJECT_ID=
GCP_SERVICE_ACCOUNT_KEY=
UPLOAD_BUCKET=pocketlol-uploads
CDN_UPLOAD_BASE_URL=https://upload.cdn.pocketlol
SIGNED_UPLOAD_TTL_SECONDS=600
DEFAULT_TENANT_ID=pocketlol
DEFAULT_INGEST_REGION=us-central1

# Pub/Sub topics
PUBSUB_PROJECT_ID=pocketlol-local
MEDIA_UPLOADED_TOPIC=media.uploaded
MEDIA_READY_FOR_STREAM_TOPIC=media.ready-for-stream
PREVIEW_GENERATION_TOPIC=media.preview.requested
MEDIA_PROCESSED_TOPIC=media.processed
CLEANUP_INTERVAL_SECONDS=300

# Observability
OTEL_TRACES_ENDPOINT=
OTEL_METRICS_ENDPOINT=
OTEL_METRICS_INTERVAL_MS=15000

# Audit sink configuration
ENABLE_AUDIT_EVENTS=false
AUDIT_EVENT_SINK_URL=
AUDIT_EVENT_SINK_TOKEN=
AUDIT_EVENT_SINK_TIMEOUT_MS=2000
