# HTTP server configuration
HTTP_HOST=0.0.0.0
HTTP_PORT=4000
HTTP_BODY_LIMIT=1048576

# gRPC server configuration
GRPC_BIND_ADDRESS=0.0.0.0:50051

# PostgreSQL connection string for Prisma
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pocketlol_auth?schema=public

# JWT and token configuration
AUTH_JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
AUTH_JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
AUTH_JWT_KEY_ID=auth-service-key
ACCESS_TOKEN_TTL=900
REFRESH_TOKEN_TTL=604800
REFRESH_TOKEN_ROTATION=true

# Optional service token used for internal calls (e.g. gRPC)
SERVICE_AUTH_TOKEN=change-me

# User service integration (gRPC)
USER_SERVICE_ADDRESS=localhost:50052
# Bearer token sent to UserService gRPC; must equal UserService SERVICE_AUTH_TOKEN
USER_SERVICE_TOKEN=change-me

# Firebase configuration
FIREBASE_PROJECT_ID=pocketlol-68ca6
# Base64-encoded service account JSON (optional when using application default credentials)
FIREBASE_CREDENTIALS_B64=
