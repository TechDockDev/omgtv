# Core HTTP server settings
NODE_ENV=development
HTTP_HOST=0.0.0.0
HTTP_PORT=4900
HTTP_BODY_LIMIT=1048576
LOG_LEVEL=info

# Platform authentication
SERVICE_AUTH_TOKEN=
METRICS_ACCESS_TOKEN=

# CDN + manifest signing
CDN_BASE_URL=https://stream.cdn.pocketlol
SIGNED_URL_TTL_SECONDS=300
CDN_SIGNING_SECRET=
CDN_SIGNING_KEY_ID=primary
CDN_FAILOVER_BASE_URL=
CDN_CONTROL_BASE_URL=
CDN_CONTROL_API_KEY=

# OvenMediaEngine integration
OME_API_BASE_URL=https://ome-api.pocketlol
OME_API_KEY=
OME_API_SECRET=
OME_REELS_PRESET="720p|1280x720|2500,480p|854x480|1500,360p|640x360|900"
OME_SERIES_PRESET="1080p|1920x1080|4500,720p|1280x720|2500,480p|854x480|1500"
OME_REELS_APPLICATION=reels
OME_SERIES_APPLICATION=series
OME_REELS_INGEST_POOL=ome-reels-ingest
OME_SERIES_INGEST_POOL=ome-series-ingest
OME_REELS_EGRESS_POOL=ome-reels-egress
OME_SERIES_EGRESS_POOL=ome-series-egress
DRY_RUN_PROVISIONING=false

# Storage + metadata repositories
GCS_MANIFEST_BUCKET=pocketlol-streaming-manifests
CHANNEL_REPOSITORY_BACKEND=memory
FIRESTORE_PROJECT_ID=
POSTGRES_DSN=
MAX_PROVISION_RETRIES=5

# Pub/Sub + downstream notifications
PUBSUB_UPLOAD_SUBSCRIPTION=projects/dev/subscriptions/uploaded-media
UPLOAD_EVENT_ACK_DEADLINE_SECONDS=60
AUDIT_LOG_TOPIC=projects/dev/topics/streaming-audit
CONTENT_SERVICE_CALLBACK_URL=
API_GATEWAY_CACHE_WARMUP_URL=
OBSERVABILITY_EXPORT_URL=
BIGQUERY_EXPORT_URL=
RECONCILIATION_WINDOW_MINUTES=60

# Auth Service integration
AUTH_SERVICE_BASE_URL=https://auth.pocketlol
AUTH_SERVICE_INTROSPECTION_PATH=/api/v1/auth/introspect
AUTH_SERVICE_INTERNAL_TOKEN=
AUTH_SERVICE_TIMEOUT_MS=2000

# Probes + QoS
CDN_PROBE_REGIONS=iad,sfo,ams
PROBE_TIMEOUT_MS=3000
